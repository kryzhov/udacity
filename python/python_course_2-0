#TEST INPUT DATA:
score1 = "1"
score2 = 2
score3 = 3.0
score4 = "4"
score5 = 5

def scores_to_rating(score1,score2,score3,score4,score5):
#Turns five scores into a rating by averaging the middle three of the five scores and assigning this average to a written rating.

    def convert_to_numeric(score):
        #STEP 1 convert scores to numbers
        return float(score)

    score1 = convert_to_numeric(score1)
    score2 = convert_to_numeric(score2)
    score3 = convert_to_numeric(score3)
    score4 = convert_to_numeric(score4)
    score5 = convert_to_numeric(score5)

    print(score1,score2,score3,score4,score5)

    def sum_of_middle_three(score1,score2,score3,score4,score5):
        #STEP 2 and STEP 3 find the average of the middle three scores
        avr1=(score1+score2+score3+score4+score5-max(score1,score2,score3,score4,score5)-min(score1,score2,score3,score4,score5))/3
        return avr1

    avr = sum_of_middle_three(score1,score2,score3,score4,score5)
    print(avr)

    def score_to_rating_string (avr2):
    #STEP 4 turn average score into a rating
        if avr2<0 or avr2>5:
            mes = 'The score is crooked'
        elif avr2 <1:
            mes = 'Terrible'
        elif avr2 <2:
            mes = 'Bad'
        elif avr2 <3:
            mes = 'OK'
        elif avr2 >=4:
            mes = 'Excellent'
        else:
            mes = "Good"
        return mes

    return score_to_rating_string(avr)

print scores_to_rating(score1,score2,score3,score4,score5)
